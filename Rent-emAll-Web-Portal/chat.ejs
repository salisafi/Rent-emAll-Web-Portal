<style>
    .chat_log {
        width: 95%; height: 200px;
    }
    .name {
        width: 10%;
    }
    .message {
        width: 70%;
    }
    .chat {
        width: 10%;
    }
</style>

<div>
    <span>Room: #</span><span id="roomnum">5</span>
</div>
<div>
    <textarea id="chatLog" class="chat_log" readonly></textarea>
</div>
<form id="chat">
    <input id="name" class="name" type="text" value="<%= user.username %>">
    <input id="message" class="message" type="text">
    <input type="submit" class="chat" value="chat" />
</form>

<script src="/socket.io/socket.io.js"></script>
<script>
    $(() => {
        const name = $('#name').val();
        const socket = io();
        const num = document.getElementById('roomnum').innerHTML;

        socket.emit('joinRoom', num, name);

        $('#chat').submit((e) => {
            if ($('#message').val()) {
                socket.emit('send message', num, name, $('#message').val());
                $('#message').val('');
                $("#message").focus();
            }
            e.preventDefault();
        });

        socket.on('receive message', function (msg) {
            $('#chatLog').append(msg + '\n');
            $('#chatLog').scrollTop($('#chatLog')[0].scrollHeight);
        });

        socket.on('change name', function (name) {
            $('#name').val(name);
        });

        socket.on('leaveRoom', (num, name) => {
            $('#chatLog').append(name + ' leaved ' + num + ' :(\n');
        });

        socket.on('joinRoom', (num, name) => {
            $('#chatLog').append(name + ' joined ' + num + ' :)\n');
        });
    });
</script>