<div class="container">
  <div class="row">
    <div class="card my-5 col-md-3">
      <div class="card-body">
        <form action="/list" method="get">
          <h6>Category:</h6>
          <div class="form-check">
            <input type="checkbox" class="form-check-input" id="home" name="home" value="home" />
            <label class="form-check-label" for="home">Home</label>
          </div>
          <div class="form-check">
            <input type="checkbox" class="form-check-input" id="tools" name="tools" value="tools" />
            <label class="form-check-label" for="tools">Tools and Equipment</label>
          </div>
          <div class="form-check">
            <input type="checkbox" class="form-check-input" id="sports" name="sports" value="sports" />
            <label class="form-check-label" for="sports">Sports and Recreations</label>
          </div>
          <div class="form-check">
            <input type="checkbox" class="form-check-input" id="entertainment" name="entertainment" value="entertainment" />
            <label class="form-check-label" for="entertainment">Entertainment</label>
          </div>
          <div class="form-check">
            <input type="checkbox" class="form-check-input" id="babies" name="babies" value="babies" />
            <label class="form-check-label" for="babies">Babies and Kids</label>
          </div>
          <div class="form-check">
            <input type="checkbox" class="form-check-input" id="fashion" name="fashion" value="fashion" />
            <label class="form-check-label" for="fashion">Fashion</label>
          </div>
          <br>
          <h6>Location:</h6>
          <div class="form-check">
            <input type="checkbox" class="form-check-input" id="toronto" name="toronto" value="toronto" />
            <label class="form-check-label" for="fashion">City of Toronto</label>
          </div>
          <div class="form-check">
            <input type="checkbox" class="form-check-input" id="markham" name="markham" value="markham" />
            <label class="form-check-label" for="fashion">Markham / York Region</label>
          </div>
          <div class="form-check">
            <input type="checkbox" class="form-check-input" id="mississauga" name="mississauga" value="mississauga" />
            <label class="form-check-label" for="fashion">Mississauga / Peel Region</label>
          </div>
          <div class="form-check">
            <input type="checkbox" class="form-check-input" id="oakville" name="oakville" value="oakville" />
            <label class="form-check-label" for="fashion">Oakville / Halton Region</label>
          </div>
          <div class="form-check">
            <input type="checkbox" class="form-check-input" id="oshawa" name="oshawa" value="oshawa" />
            <label class="form-check-label" for="fashion">Oshawa / Durham Region</label>
          </div>
          <br>
          <div class="form-group">
            <label for="deposit">
              <h6>Deposit Price:</h6>
            </label>
            <div class="d-flex justify-content-center">
              <span class="mr-2">$0</span>
              <input class="custom-range mx-auto" type="range" id="deposit" name="deposit" min="0" max="1000" step="10"
                value="500" />
              <span class="ml-2">$1000</span>
            </div>
          </div>
          <br>
          <div class="form-group">
            <label for="rate">
              <h6>Rental Price Per Day:</h6>
            </label>
            <div class="d-flex justify-content-center">
              <span class="mr-2">$0</span>
              <input class="custom-range" type="range" id="rate" name="rate" min="0" max="50" step="1" value="25" />
              <span class="ml-2">$50</span>
            </div>
          </div><br>
          <button class="btn btn-primary float-right" type="submit">Apply Filter</button>
        </form>
      </div>
    </div>

    <div class="col-md-9">
      <div class="card my-5">
        <div class="card-body">
          <span class="font-italic float-left"><%= items.length %> results</span>
          <div class="float-right">
            <form action="/list" class="form-inline">
              <span class="mr-2 mb-2">Sort by:</span>
              <select class="form-control btn btn-sm btn-info mb-2" name="sortBy" onchange="this.form.submit()">
                <option value="postedDate">Posted Date</option>
                <option value="price">Price</option>
              </select>
            </form>
          </div>
          <div class="table-responsive table-wrapper-scroll-y" style="height:570px">
            <table id="itemTable" class="table table-condensed table-hover">
              <tbody>
                <% for (var i = 0; i < items.length; i++) { %>
                  <tr onclick="linkClick('item')" style="cursor: pointer;">
                    <td>
                      <img style="width: 150px; height: auto;" src="<%= items[i].photoURL %>">
                    </td>
                    <td>
                      <h3 id="itemName"><%= items[i].name %></h3>
                      <p id="itemDescription">
                        <%= items[i].description %>
                      </p>
                      <span id="postedDate">Posted on <%= postedDates[i] %></span>
                    </td>
                    <td>
                      <div class="border rounded pb-4 px-1" style="background: #EFF0F0">
                        <div style="width: 157px"><span class="text-danger font-weight-bold" id="price" style="font-size: 25pt;">$<%= items[i].rental_price_daily %></span> / day
                        </div>
                        <span class="font-weight-bold" id="username">Lender: <%= items[i].userId %></span><br>
                        <div id="rating" class="text-center mt-2">
                          <% if (items[i].item_rate == 1) { %>
                            <span class="fa fa-star text-warning"></span>
                            <span class="fa fa-star text-secondary"></span>
                            <span class="fa fa-star text-secondary"></span>
                            <span class="fa fa-star text-secondary"></span>
                            <span class="fa fa-star text-secondary"></span>
                          <% } else if (items[i].item_rate == 2) { %>
                            <span class="fa fa-star text-warning"></span>
                            <span class="fa fa-star text-warning"></span>
                            <span class="fa fa-star text-secondary"></span>
                            <span class="fa fa-star text-secondary"></span>
                            <span class="fa fa-star text-secondary"></span>
                          <% } else if (items[i].item_rate == 3) { %>
                            <span class="fa fa-star text-warning"></span>
                            <span class="fa fa-star text-warning"></span>
                            <span class="fa fa-star text-warning"></span>
                            <span class="fa fa-star text-secondary"></span>
                            <span class="fa fa-star text-secondary"></span>
                          <% } else if (items[i].item_rate == 4) { %>
                            <span class="fa fa-star text-warning"></span>
                            <span class="fa fa-star text-warning"></span>
                            <span class="fa fa-star text-warning"></span>
                            <span class="fa fa-star text-warning"></span>
                            <span class="fa fa-star text-secondary"></span>
                          <% } else if (items[i].item_rate == 5) { %>
                            <span class="fa fa-star text-warning"></span>
                            <span class="fa fa-star text-warning"></span>
                            <span class="fa fa-star text-warning"></span>
                            <span class="fa fa-star text-warning"></span>
                            <span class="fa fa-star text-warning"></span>
                          <% } %>
                        </div>
                      </div>
                    </td>
                  </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>